<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".JsonMainActivity" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="200dp" >

        <TextView
            android:id="@+id/textqian"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="xml 解析demo"
            android:textSize="18sp" />
    </ScrollView>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onXmlToObjectClick"
        android:text="转换" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onJavaObjectToXmlStringClick"
        android:text="java对象转换Xml字符" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/texthou"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:textSize="18sp" />
    </ScrollView>

</LinearLayout>